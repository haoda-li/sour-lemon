<!doctype html>
<html lang="en">

<head>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.amber-orange.min.css" />
  <link rel="stylesheet" href="/pub/css/header.css">
  <link rel="stylesheet" href="/pub/css/admin.css">
  <link rel="stylesheet" href="/pub/css/global.css">
  <link rel="icon" href="/pub/assets/logo_text.png">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <title>Sour lemon - Admin</title>
</head>



<body>


  <div class="mdl-layout mdl-js-layout">
    <header class="mdl-layout__header">
    </header>
    <div class="mdl-layout__drawer">
    </div>




    <main class="mdl-layout__content">
      <div class="adminProfile">
        <div id="banner">
          <div class="bannerPic" id="banner"></div>
        </div>
        <div id="profileStats">
          <div class="introduction">
            Hi. What's your main focus for today?
          </div>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored logout" onclick='window.location = "/admin/logout"'>
            Log out
          </button>
        </div>
        <img src="/pub/assets/lemon_raccoon_3.png" id="bigProfilePicCircle">
      </div>

      <div class="functionalArea">
        <div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
          <div class="mdl-tabs__tab-bar">
              <a href="#articles-panel" class="mdl-tabs__tab is-active">Articles</a>
              <a href="#reviews-panel" class="mdl-tabs__tab">Short Reviews</a>
              <a href="#movies-panel" class="mdl-tabs__tab">Movies</a>
              <a href="#users-panel" class="mdl-tabs__tab">Users</a>
              <a href="#newPW-panel" class="mdl-tabs__tab">Change Password</a>
          </div>

          <div class="mdl-tabs__panel is-active" id="articles-panel">
            <div class="mdl-textfield mdl-js-textfield">
              <input class="mdl-textfield__input" type="text" id="article_search_movie_input" pattern="^[0-9]*$" placeholder="Search Movie ID">
              <label class="mdl-textfield__label" for="search_input"></label>
              <span class="mdl-textfield__error">ID must be a number</span>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
              <input class="mdl-textfield__input" type="text" id="article_search_arthur_input" placeholder="Search Arthur">
              <label class="mdl-textfield__label" for="search_input"></label>
            </div>
            <button class="mdl-navigation__link mdl-button search-button" id="articleSearch">
              <i class="material-icons yellow">search</i>
            </button>
            <div class="hidden" id="article_search_movie_input_hidden"></div>
            <div class="hidden" id="article_search_arthur_input_hidden"></div>
            <div id="unreviewed_articles">
              <h1>Articles waiting for approval</h1>
            </div>
            <div class="center-align">
                <button id="load_unreviewed_story" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                  load more unreviewed stories
                </button>
            </div>
            <div id="reviewed_articles">
              <h1>Approved Articles</h1>
            </div>
            <div class="center-align">
              <button id="load_reviewed_story" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                load more reviewed stories
              </button>
            </div>
          </div>
          

          <div class="mdl-tabs__panel" id="reviews-panel">
            <div class="mdl-textfield mdl-js-textfield">
              <input class="mdl-textfield__input" type="text" id="reviews_search_movie_input" pattern="^[0-9]*$" placeholder="Search Movie ID">
              <label class="mdl-textfield__label" for="search_input"></label>
              <span class="mdl-textfield__error">ID must be a number</span>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
              <input class="mdl-textfield__input" type="text" id="reviews_search_arthur_input" placeholder="Search Arthur">
              <label class="mdl-textfield__label" for="search_input"></label>
            </div>
            <button class="mdl-navigation__link mdl-button search-button" id="commentSearch">
              <i class="material-icons yellow">search</i>
            </button>
            <div class="hidden" id="reviews_search_movie_input_hidden"></div>
            <div class="hidden" id="reviews_search_arthur_input_hidden"></div>
            <div class="adminShortReviews">
               <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
              <thead>
                <tr>
                  <th class="mdl-data-table__cell--non-numeric">Author</th>
                  <th class="mdl-data-table__cell--non-numeric">Movie ID</th>
                  <th class="mdl-data-table__cell--non-numeric">Movie</th>
                  <th class="mdl-data-table__cell--non-numeric">Contents</th>
                  <th class="mdl-data-table__cell--non-numeric">Operation</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
            </div>
            <div class="center-align">
              <button id="load_comment" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                load more comments
              </button>
            </div>
          </div>

          <div class="mdl-tabs__panel" id="movies-panel">
            <div class="mdl-textfield mdl-js-textfield">
              <input class="mdl-textfield__input" type="text" id="movies_search_movie_input" placeholder="Search Movie title or ID">
              <label class="mdl-textfield__label" for="search_input"></label>
            </div>
            <button class="mdl-navigation__link mdl-button search-button" id="movieSearch">
              <i class="material-icons yellow">search</i>
            </button>
            <div class="hidden" id="movies_search_movie_input_hidden"></div>
            <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored" id="addMovieButton">
              <i class="material-icons">add</i>
            </button>
            <div id="addMovieForm">
              <form action="#">
                <label id="movieprompt"></label>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <input class="mdl-textfield__input" type="text" pattern="-?[0-9]*(\.[0-9]+)?" id="movieID" name="movieID">
                  <label class="mdl-textfield__label" for="movieID">ID...</label>
                  <span class="mdl-textfield__error">ID is not a number!</span>
                </div>
              </form>
            </div>

            <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
              <thead>
                <tr>
                  <th class="mdl-data-table__cell--non-numeric">ID</th>
                  <th class="mdl-data-table__cell--non-numeric">Title</th>
                  <th class="mdl-data-table__cell--non-numeric">Operation</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
            <div class="center-align">
              <button id="load_movies" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                load more movies
                  </button>
            </div>
          </div>
          <div class="mdl-tabs__panel" id="users-panel">
            <div class="mdl-textfield mdl-js-textfield">
              <input class="mdl-textfield__input" type="text" id="users_search_arthur_input" placeholder="Search User by Username">
              <label class="mdl-textfield__label" for="search_input"></label>
            </div>
            <button class="mdl-navigation__link mdl-button search-button" id="userSearch">
              <i class="material-icons yellow">search</i>     
            </button>
            <div class="hidden" id="users_search_movie_input_hidden"></div>
            <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
              <thead>
                <tr>
                  <th class="mdl-data-table__cell--non-numeric">Username</th>
                  <th class="mdl-data-table__cell--non-numeric">Email</th>
                  <th class="mdl-data-table__cell--non-numeric">Status</th>
                  <th class="mdl-data-table__cell--non-numeric">Operation</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
            <div class="center-align">
              <button id="load_users" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                load more users
                  </button>
            </div>
          </div>
          <div class = "mdl-tabs__panel" id = "newPW-panel">
              <form action="#" id="userInfoForm">
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" pattern="^(?=.*\w).{4,8}$" id="oldPassWord" />
                    <label class="mdl-textfield__label" for="username">Old Password</label>
                    <span class="mdl-textfield__error">Password must be between 4 and 8 digits long and include at least one charcter.</span>
                  </div>
                  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="text" pattern="^(?=.*\w).{4,8}$" id="newPassWord" />
                    <label class="mdl-textfield__label" for="username">New Password</label>
                    <span class="mdl-textfield__error">Password must be between 4 and 8 digits long and include at least one charcter.</span>
                  </div>
                  <button class="mdl-button mdl-js-button mdl-button--primary" id="changePw_btn">
                      Submit
                  </button>
              </form>
              <p id="prompt"></p>
          </div>
        </div>
      </div>
    </main>
  </div>
  <script type="text/javascript" src="/pub/scripts/header.js"></script>
  <script src="/pub/scripts/admin.js"></script>
</body>

</html>
